<%- model_class = Basvuran -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
  <%= current_user.id %>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:kod) %></dt>
      <dd><pre class="prettyprint"><%= @basvuran.kod %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:telefon) %></dt>
      <dd><pre class="prettyprint"><%= @basvuran.telefon %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mail) %></dt>
      <dd><pre class="prettyprint"><%= @basvuran.mail %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              basvurans_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_basvuran_path(@basvuran), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              basvuran_path(@basvuran),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>