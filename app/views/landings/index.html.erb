<%- model_class = Basvuran -%>

<div class="page-header">
  <h1>Tüm Başvurular</h1>
</div>
<div class='col-sm-offset-1 col-sm-6'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:kod) %></th>
        <th><%= model_class.human_attribute_name(:telefon) %></th>
        <th><%= model_class.human_attribute_name(:mail) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%= model_class.human_attribute_name(:user) %></th>
      </tr>
    </thead>
    <tbody>
      <% @basvurans.each do |basvuran| %> 
        <tr>
          <td><%= link_to basvuran.kod, basvuran_path(basvuran) %></td>
          <td><%= basvuran.telefon %></td>
          <td><%= basvuran.mail %></td>
          <td><%=l basvuran.created_at, format: :long %></td>
          <td><%= basvuran.user.nil? ? "" : basvuran.user.username %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
